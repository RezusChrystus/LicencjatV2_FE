<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.licencjatv2_fe.TaskWindow.TaskController">

    <Label text="Task Title:" />
    <TextField fx:id="titleField" />

    <Label text="Deadline date (DD.MM.YYYY):" />
   <DatePicker fx:id="dueDateField" />

    <Label text="State:" />
    <ChoiceBox fx:id="stateChoiceBox"/>

    <Button onAction="#handleSave" text="Save" />
</VBox>
